<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import ui.UIView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.geometry.Insets?>
<UIView fx:id="root" prefHeight="400" prefWidth="600" stylesheets="@../../../assets/css/main_style.css" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" style="-fx-background-color: black;">

    <VBox alignment="CENTER" spacing="100.0">
        <padding>
            <Insets top="8.0" bottom="8.0" left="8.0" right="8.0"/>
        </padding>
        <VBox alignment="CENTER" spacing="16.0">
            <ImageView fx:id="imageView" fitHeight="400" fitWidth="600"/>
            <Label fx:id="slideNumLabel" styleClass="label-retro" style="-fx-font-size: 20px;" text="1/4"/>

            <HBox alignment="CENTER" spacing="8.0">
                <ToggleButton fx:id="prev" styleClass="button-retro" text="PREVIOUS" />
                <ToggleButton fx:id="next" styleClass="button-retro" text="NEXT" />
            </HBox>

            <VBox alignment="CENTER_LEFT">
                <ToggleButton fx:id="back" styleClass="button-retro" text="BACK" />
            </VBox>

        </VBox>
    </VBox>

</UIView>